<Window x:Class="OrderMgmtSystem.Services.Dialogs.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:owner="clr-namespace:OrderMgmtSystem"
        xmlns:local="clr-namespace:OrderMgmtSystem.Services.Dialogs"
        mc:Ignorable="d"
        Owner="{x:Static owner:App.CurrentMainWindow}"
        WindowStartupLocation="CenterOwner"
        Icon="/Images/Icon.png"
        Title="{Binding Title}"
        SizeToContent="WidthAndHeight"
        d:DesignHeight="230"
        d:DesignWidth="300">
  <ContentControl x:Name="ContentPresenter"
                  Content="{Binding}" />
</Window>
